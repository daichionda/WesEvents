
<div id = "header">

    <h1><%= link_to 'WesEvents', controller: 'homepage' %></h1>
    <div id = "navbar">
        <button class = "hollowbutton"> <%= link_to 'All Events', controller: 'events', :show_all => true %> </button>
        <button class = "createbutton"> <%= link_to 'Create New Event', new_event_path(:redirect_to => @state) %></button>
    </div>

</div>

<div id = "titlebar">

    <button class = "hollowbutton">
        <% if params[:redirect_to] == 'homepage' %>
            <%= link_to '<', controller: 'homepage' %>
        <% elsif params[:redirect_to] == 'true' || params[:redirect_to] == '' %>
            <%= link_to '<', controller: 'events', :show_all => params[:redirect_to] %>
        <% else %>
            <%= link_to '<', controller: 'events', :date => params[:redirect_to] %>
        <% end %>
    </button>
    <h2>NEW EVENT</h2>
    <button class = "dummy">></button>

</div>

<%= render 'form' %>
